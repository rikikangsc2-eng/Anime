<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anime Dashboard</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Anime Dashboard</h1>
    <form class="mb-4">
      <input type="text" class="form-control" placeholder="Search anime...">
      <select class="form-select mt-2">
        <option value="latest">Sort by Latest</option>
        <option value="az">Sort by A-Z</option>
      </select>
    </form>
    <div class="row">
      <% anime.forEach(a => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= a.thumbnail %>" class="card-img-top" alt="<%= a.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= a.title %></h5>
              <p class="card-text"><%= a.synopsis %></p>
              <a href="/stream/<%= a.animeId %>" class="btn btn-primary">Watch</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
