<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= anime.title %> - Stream</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1 class="mt-4"><%= anime.title %></h1>
    <p class="lead"><%= anime.synopsis %></p>

    <% if (episode) { %>
      <div class="mt-4">
        <h2>Episode <%= episode.episode %></h2>
        <iframe src="<%= episode.link %>" width="100%" height="500px" allowfullscreen></iframe>
      </div>
    <% } %>

    <h2 class="mt-4">Episodes</h2>
    <ul class="list-group">
      <% anime.episodes.forEach(e => { %>
        <li class="list-group-item">
          <a href="/stream/<%= anime.animeId %>/episode/<%= e.episode %>">Episode <%= e.episode %></a>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
